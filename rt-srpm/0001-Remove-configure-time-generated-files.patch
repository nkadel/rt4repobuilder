-    my $re_address   = qr![^|/,\s][^,\s]*!;
-    my $re_value     = qr/(?:$re_pipe|$re_path|$re_address)/;
-    my $re_values    = qr/(?:$re_value(?:\s*,\s*$re_value)*)/;
