<Directory "@RT_WWWDIR@">
    Options FollowSymLinks
    <IfModule mod_authz_core.c>
      # Apache 2.4
      Require all granted
    </IfModule>
    <IfModule !mod_authz_core.c>
      # Apache 2.2
      Order allow,deny
      Allow from all
    </IfModule>
</Directory>

Alias /rt "@RT_WWWDIR@"

<Location /rt>
    Require all granted
    Options +ExecCGI
    AddHandler fcgid-script .fcgi
</Location>
